<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.OpenSchoolCloudCalendar" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/osc_blauw</item>
        <item name="android:navigationBarColor">@color/osc_wit</item>
    </style>

    <!-- Splash screen theme using SplashScreen API -->
    <style name="Theme.OpenSchoolCloud.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/osc_wit</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/osc_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.OpenSchoolCloudCalendar</item>
    </style>
</resources>
